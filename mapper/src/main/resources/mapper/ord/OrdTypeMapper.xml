  <insert id="initOrdTypeByShopIdAndUserId">
      INSERT INTO ord_type (
        CODE,
        NAME,
        description,
        fk_shp_shop_id,
        TYPE,
        state,
        sort,
        insert_time,
        insert_admin,
        versions,
        del,
        remark
      )
