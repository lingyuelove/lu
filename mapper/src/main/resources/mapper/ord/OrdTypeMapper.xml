        s.CODE,
        s.NAME,
        s.description,
        #{shopId},
        0,
        1,
        s.sort,
        NOW(),
        #{userId},
        s.versions,
        s.del,
        s.remark
      FROM
        sys_enum s
      WHERE s.type = 'ord_type' and s.state != -1
