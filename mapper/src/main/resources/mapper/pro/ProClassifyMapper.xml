<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luxuryadmin.mapper.pro.ProClassifyMapper">
    <resultMap id="BaseResultMap" type="com.luxuryadmin.entity.pro.ProClassify">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="fk_shp_shop_id" jdbcType="INTEGER" property="fkShpShopId"/>
        <result column="type" jdbcType="CHAR" property="type"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="insert_time" jdbcType="TIMESTAMP" property="insertTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="insert_admin" jdbcType="INTEGER" property="insertAdmin"/>
        <result column="update_admin" jdbcType="INTEGER" property="updateAdmin"/>
        <result column="versions" jdbcType="INTEGER" property="versions"/>
        <result column="del" jdbcType="CHAR" property="del"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, code, name, description, fk_shp_shop_id, type, state, sort, insert_time, update_time, 
    insert_admin, update_admin, versions, del, remark
  </sql>
    <select id="getObjectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from pro_classify
        where id = #{id,jdbcType=INTEGER}
    </select>

    <sql id="selectSql">
        SELECT pcl.id,pcl.`code` ,pcl.`name` , pcl.`state` , pcl.`sort`
        FROM pro_classify pcl
        WHERE pcl.`fk_shp_shop_id` = #{shopId}
    </sql>

    <!--根据状态来获取分类;-->
    <select id="listProClassifyByState" resultType="com.luxuryadmin.vo.pro.VoProClassify">
        <include refid="selectSql"/>
        <choose>
            <when test="state != null">
                AND pcl.`state` = #{state}
            </when>
            <otherwise>
                AND pcl.`state` != -1
            </otherwise>
        </choose>
        ORDER BY pcl.`state` DESC, pcl.`sort` ASC, pcl.`id` DESC
    </select>

    <select id="getProClassifyByType" resultType="com.luxuryadmin.vo.pro.VoProClassify">
        SELECT pcl.id,pcl.`code` ,pcl.`name` , pcl.`state` , pcl.`sort`
        FROM pro_classify pcl
        WHERE pcl.`fk_shp_shop_id` = #{shopId}
        <if test="code != null">
            AND pcl.code = #{code,jdbcType=VARCHAR}
        </if>
        <choose>
            <when test="state != null">
                AND pcl.`state` = #{state}
            </when>
            <otherwise>
                AND pcl.`state` != -1
            </otherwise>
        </choose>
        ORDER BY pcl.`state` DESC, pcl.`sort` ASC
    </select>
    <!--加载友商店铺分类-->
    <select id="listLeaguerProClassify" resultType="com.luxuryadmin.vo.pro.VoProClassify">
        <include refid="selectSql"/>
        AND pcl.`state` = 1
        ORDER BY pcl.`state` DESC, pcl.`sort` ASC
    </select>

    <delete id="deleteObject" parameterType="java.lang.Integer">
    delete from pro_classify
    where id = #{id,jdbcType=INTEGER}
  </delete>

    <!--删除店铺分类(注销时调用)-->
    <delete id="deleteProClassifyByShopId">
        delete from pro_classify where fk_shp_shop_id = #{shopId}
    </delete>

    <!--根据店铺id 初始化分类表;从模板中初始化数据-->
    <insert id="initProClassifyByShopIdAndUserId">
      INSERT INTO pro_classify (
        code,
        name,
        description,
        fk_shp_shop_id,
        type,
        state,
        sort,
        insert_time,
        insert_admin,
        versions,
        del,
        remark
      )
      SELECT
        s.code,
        s.name,
        s.description,
        #{shopId},
        0,
        1,
        s.sort,
        NOW(),
        #{userId},
        s.versions,
        s.del,
        s.remark
      FROM
        sys_enum s
      WHERE s.type = 'pro_classify' and s.state != -1
  </insert>

