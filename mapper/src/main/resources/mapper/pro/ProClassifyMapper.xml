    <!--修改店铺分类-->
    <update id="updateProClassify" parameterType="java.util.List">
        UPDATE pro_classify
        SET
        state = CASE code
        <foreach collection="list" item="item" index="index" open="" separator="" close="">
            WHEN #{item.code} THEN #{item.state}
        </foreach>
        END,
        sort = CASE code
        <foreach collection="list" item="item" index="index" open="" separator="" close="">
            WHEN #{item.code} THEN #{item.sort}
        </foreach>
        END,
        update_time = NOW()
        WHERE code IN
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.code}
        </foreach>
        and fk_shp_shop_id = #{shopId}
    </update>
