    <!-- 根据店铺id 初始化销售渠道;从模板中初始化-->
    <insert id="initProSaleChannelByShopIdAndUserId">
        INSERT INTO pro_sale_channel (
          NAME,
          fk_shp_shop_id,
          type,
          state,
          sort,
          insert_time,
          insert_admin
        )
        SELECT
          s.NAME,
          #{shopId},
          0,
          1,
          s.sort,
          NOW(),
          #{userId}
        FROM
          sys_enum s
        WHERE s.type = 'pro_sale_channel'
          AND s.state != - 1
    </insert>
