<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luxuryadmin.mapper.pro.ProSourceMapper">
    <resultMap id="BaseResultMap" type="com.luxuryadmin.entity.pro.ProSource">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="fk_shp_shop_id" jdbcType="INTEGER" property="fkShpShopId"/>
        <result column="type" jdbcType="CHAR" property="type"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="insert_time" jdbcType="TIMESTAMP" property="insertTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="insert_admin" jdbcType="INTEGER" property="insertAdmin"/>
        <result column="update_admin" jdbcType="INTEGER" property="updateAdmin"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, name, fk_shp_shop_id, type, state, sort, insert_time, update_time, insert_admin, 
    update_admin, remark
  </sql>
    <select id="getObjectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from pro_source
        where id = #{id,jdbcType=INTEGER}
    </select>

    <!--查找店铺的商品来源-->
    <select id="listProSourceByShopId" resultType="com.luxuryadmin.vo.pro.VoProSource">
    SELECT id,name,sort FROM pro_source WHERE state = 1 and fk_shp_shop_id = #{shopId} order by sort asc
  </select>
    <delete id="deleteObject" parameterType="java.lang.Integer">
    delete from pro_source
    where id = #{id,jdbcType=INTEGER}
  </delete>
    <delete id="deleteProSourceByShopId">
        delete from pro_source where fk_shp_shop_id = #{shopId}
    </delete>

    <!--根据店铺id 初始化商品来源表;从模板中初始化-->
    <insert id="initProSourceByShopIdAndUserId">
        INSERT INTO pro_source (
          NAME,
          fk_shp_shop_id,
          TYPE,
          state,
          sort,
          insert_time,
          insert_admin,
          remark
        )
        SELECT
          s.NAME,
          #{shopId},
          0,
          1,
          s.sort,
          NOW(),
          #{userId},
          s.remark
        FROM
          sys_enum s
        WHERE s.type = 'pro_source'
          and s.state != - 1
    </insert>
    <insert id="saveObject" parameterType="com.luxuryadmin.entity.pro.ProSource">
        insert into pro_source
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="fkShpShopId != null">
                fk_shp_shop_id,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="state != null">
                state,
            </if>
            <if test="sort != null">
                sort,
            </if>
            <if test="insertTime != null">
                insert_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="insertAdmin != null">
                insert_admin,
            </if>
            <if test="updateAdmin != null">
                update_admin,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="fkShpShopId != null">
                #{fkShpShopId,jdbcType=INTEGER},
            </if>
            <if test="type != null">
                #{type,jdbcType=CHAR},
            </if>
            <if test="state != null">
                #{state,jdbcType=INTEGER},
            </if>
            <if test="sort != null">
                #{sort,jdbcType=INTEGER},
            </if>
            <if test="insertTime != null">
                #{insertTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="insertAdmin != null">
                #{insertAdmin,jdbcType=INTEGER},
            </if>
            <if test="updateAdmin != null">
                #{updateAdmin,jdbcType=INTEGER},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>


    <update id="updateObject" parameterType="com.luxuryadmin.entity.pro.ProSource">
        update pro_source
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="fkShpShopId != null">
                fk_shp_shop_id = #{fkShpShopId,jdbcType=INTEGER},
            </if>
            <if test="type != null">
                type = #{type,jdbcType=CHAR},
            </if>
            <if test="state != null">
                state = #{state,jdbcType=INTEGER},
            </if>
            <if test="sort != null">
                sort = #{sort,jdbcType=INTEGER},
            </if>
            <if test="insertTime != null">
                insert_time = #{insertTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="insertAdmin != null">
                insert_admin = #{insertAdmin,jdbcType=INTEGER},
            </if>
            <if test="updateAdmin != null">
                update_admin = #{updateAdmin,jdbcType=INTEGER},
            </if>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>