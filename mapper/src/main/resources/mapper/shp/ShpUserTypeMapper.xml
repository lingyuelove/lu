    <insert id="initShpUserTypeByShopIdAndUserId">
      INSERT INTO shp_user_type (
        NAME,
        description,
        fk_shp_shop_id,
        TYPE,
        state,
        sort,
        insert_time,
        insert_admin,
        versions,
        del,
        remark
      )
      SELECT
        s.NAME,
        s.description,
        #{shopId},
        0,
        1,
        s.sort,
        NOW(),
        #{userId},
        s.versions,
        s.del,
        s.remark
      FROM
        sys_enum s
      WHERE s.type = 'shp_user_type' and s.state != -1
  </insert>
    <update id="updateObject" parameterType="com.luxuryadmin.entity.shp.ShpUserType">
        update shp_user_type
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="description != null">
                description = #{description,jdbcType=VARCHAR},
            </if>
            <if test="fkShpShopId != null">
                fk_shp_shop_id = #{fkShpShopId,jdbcType=INTEGER},
