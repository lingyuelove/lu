    <select id="getObjectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from shp_user_type
        where id = #{id,jdbcType=INTEGER}
    </select>
    <!--获取用户类型列表-->
    <select id="listShpUserTypeByShopId" resultType="com.luxuryadmin.entity.shp.ShpUserType">
        SELECT id,name FROM shp_user_type
        WHERE fk_shp_shop_id = #{shopId}
        and state = 1 and id != -9 AND NAME !='经营者'
        ORDER BY sort ASC
  </select>

    <!--是否存在此身份名称-->
    <select id="existsUserType" resultType="java.lang.Integer">
        SELECT
          COUNT(0)
        FROM
          shp_user_type
        WHERE fk_shp_shop_id = #{shopId}
          AND name = #{name}
    </select>

    <select id="selectShpUserTypeByShopIdAndTypeId" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List"/>
        from
            shp_user_type
        where
            id = #{id,jdbcType=INTEGER}
        and
            fk_shp_shop_id = #{shopId,jdbcType=INTEGER}
