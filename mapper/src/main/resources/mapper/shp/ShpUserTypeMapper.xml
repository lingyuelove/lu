        where id = #{id,jdbcType=INTEGER}
    </update>

    <!--身份排序-->
    <update id="sortUserType" parameterType="java.util.List">
        UPDATE shp_user_type
        set
        sort = CASE id
        <foreach collection="list" item="item" index="index" open="" separator="" close="">
            WHEN #{item.id} THEN #{item.sort}
        </foreach>
        END,
        update_time = NOW()
        WHERE id IN
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.id}
        </foreach>
        and fk_shp_shop_id = #{shopId}
    </update>

