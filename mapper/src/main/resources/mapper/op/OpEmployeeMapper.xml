    <sql id="Base_Column_List">
    id, fk_shp_user_id, type, union_switch, insert_time, update_time, insert_admin, update_admin, 
    del, remark
  </sql>
    <select id="getObjectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from op_employee
        where id = #{id,jdbcType=INTEGER} and del = 0
    </select>
    <select id="count" resultType="java.lang.Integer" parameterType="java.lang.Integer">
      select count(*)
      from op_employee
      where
      fk_shp_user_id = #{shpUserId}
      and
      del = 0
    </select>
    <select id="listEmployee" resultType="com.luxuryadmin.vo.op.VoOpEmployeeList">
        SELECT
            op_employee.id as id,
            op_employee.fk_shp_user_id as userId,
            shp_user.nickname as nickname,
            shp_user.username as username,
            ( SELECT COUNT(*) FROM op_union_agent WHERE op_union_agent.fk_op_employee_id = op_employee.id and op_union_agent.del = 0) AS agentCount,
            shp_user.insert_time AS insertTime,
            op_employee.insert_time AS employeeInsertTime,
            shp_user.number AS userNumber,
            op_employee.union_switch as unionSwitch
        FROM
            op_employee
            LEFT JOIN shp_user ON op_employee.fk_shp_user_id = shp_user.id
        where op_employee.del = 0
    </select>
    <!--获取允许分享的推广人员的userId-->
    <select id="getAllowedEmployeeShareUserId" resultType="java.lang.String">
        SELECT ifnull(GROUP_CONCAT(fk_shp_user_id),'') FROM op_employee  WHERE union_switch = 1 and del = 0
    </select>
    <delete id="deleteObject" parameterType="java.lang.Integer">
    delete from op_employee
    where id = #{id,jdbcType=INTEGER}
  </delete>
    <delete id="deleteUnionSwitch" parameterType="java.lang.Integer">
      update op_employee set `del` = '1' where id = #{id}
    </delete>
