    </insert>
    <update id="updateObject" parameterType="com.luxuryadmin.entity.op.OpEmployee">
        update op_employee
        <set>
            <if test="fkShpUserId != null">
                fk_shp_user_id = #{fkShpUserId,jdbcType=INTEGER},
            </if>
            <if test="type != null">
